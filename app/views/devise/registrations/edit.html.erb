<%= render 'welcome/partials/admin_header' %>
<%= render 'welcome/partials/admin_nav' %>
<section class="content">
  <div class="g12">
    <h2>Alterar Senha</h2>
    <p>Alterar senha do usuário.</p>
    <div class="actions">
    <fieldset>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= devise_error_messages! %>
        <p><div><%= f.submit "Atualizar", class: 'button small' %><%= link_to "Voltar", "/users/#{current_user.id}/index", class: 'button small'%></div></p>
        <section>
          <%= f.label "Nova senha" %> (Deixe em branco se você não quiser mudá-la)<br />
        <div><%= f.password_field :password, :autocomplete => "off" %></div>
        </section>
        
        <section>
        <%= f.label "Confirmação da Nova Senha" %><br />
        <div><%= f.password_field :password_confirmation %></div>
        </section>
        
        <section>
        <%= f.label "Senha atual"%> (Precisamos de sua senha atual para confirmar as alterações.)<br />
        <div><%= f.password_field :current_password %></div>
        </section>

      <% end %>
      <%  if current_user.admin? %>
      <h3>Cancelar Conta</h3>

      <p>Infeliz? <%= button_to "Cancelar Conta", registration_path(resource_name), :data => { :confirm => "Você tem certeza?" }, :method => :delete %>.</p>
      <% end %>
  </fieldset>
</div>
  </div>
</section>

<%= render 'welcome/partials/footer' %>

